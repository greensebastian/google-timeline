@model List<GoogleTimelineUI.Models.ActivityCountModel>
@{
    var tableId = Guid.NewGuid();
    var min = @Math.Min(5, Model.Count);
    var initialShownCount = @Math.Min(10, Model.Count);
}
<input class="js-table-slider" type="range" min="@min" max="@Model.Count" value="@initialShownCount" data-tableid="@tableId">
<div class="table-responsive">
    <table class="table table-striped" id="@tableId">
        <tr>
            <th>Travel method</th>
            <th>Count</th>
        </tr>
        @for (var i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <tr class="@(i >= initialShownCount ? "d-none" : "")">
                <td>@item.TravelMethod</td>
                <td>@string.Format("{0:N2}", item.Count) @item.Unit</td>
            </tr>
        }
    </table>
</div>